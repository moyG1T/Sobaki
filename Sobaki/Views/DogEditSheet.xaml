<UserControl x:Class="Sobaki.Views.DogEditSheet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sobaki.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="26*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="362*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="1" Grid.Row="1"/>

        <StackPanel Grid.Column="4" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">

            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Порядковый номер" FontSize="16" Margin="0 0 10 0"/>
                <TextBox Width="75"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Рост" FontSize="16" Margin="0 0 10 0"/>
                <TextBox Width="75"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Вес" FontSize="16" Margin="0 0 10 0"/>
                <TextBox Width="75"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Возраст" FontSize="16" Margin="0 0 10 0"/>
                <TextBox Width="75"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Пол" FontSize="16" Margin="0 0 10 0"/>
                <TextBox Width="75"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Дата поступления" FontSize="16" Margin="0 0 10 0" HorizontalAlignment="Left"/>
                <TextBox Width="175" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Болезнь" FontSize="16" Margin="0 0 10 0" HorizontalAlignment="Left"/>
                <TextBox Width="175"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="5">
                <TextBlock Text="Комментарии" FontSize="16" Margin="0 0 10 0" HorizontalAlignment="Left"/>
                <TextBox Width="175" HorizontalAlignment="Right"/>
            </StackPanel>



        </StackPanel>
        <Button Content="Сохранить" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
