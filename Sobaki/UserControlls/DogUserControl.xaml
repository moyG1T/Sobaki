<UserControl x:Class="Sobaki.UserControlls.DogUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sobaki.UserControlls"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="1" Grid.RowSpan="5" Grid.Column="1"/>

        <StackPanel Grid.Row="1" Style="{StaticResource Dog_UC}">
            <TextBlock Text="Порядковый номер" FontSize="16"/>
            <TextBox Width="75"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Style="{StaticResource Dog_UC}">
            <TextBlock Text="Рост" FontSize="16" Margin="0 0 10 0"/>
            <TextBox Width="75"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Style="{StaticResource Dog_UC}">
            <TextBlock Text="Вес" FontSize="16" Margin="0 0 10 0"/>
            <TextBox Width="75"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Style="{StaticResource Dog_UC}">
            <TextBlock Text="Возраст" FontSize="16" Margin="0 0 10 0"/>
            <TextBox Width="75"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Style="{StaticResource Dog_UC}">
            <TextBlock Text="Пол" FontSize="16" Margin="0 0 10 0"/>
            <TextBox Width="75"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Style="{StaticResource Dog_UC}">
            <TextBlock Text="Дата поступления" FontSize="16"/>
            <TextBox Width="75"/>
        </StackPanel>

        <Button Content="Забрать себе" Grid.Row="7" Grid.Column="2" HorizontalAlignment="Right">
            
        </Button>
    </Grid>
</UserControl>
