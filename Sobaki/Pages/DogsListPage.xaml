<Page x:Class="Sobaki.Pages.DogsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sobaki.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DogsListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="#C3A995">
            <Button Content="Вызов администратора" Margin="10"/>
            <Button Content="Вход" HorizontalAlignment="Right" Margin="10"/>
        </DockPanel>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel HorizontalAlignment="Center" ItemHeight="320" ItemWidth="450"/>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="#C3A995"/>
    </Grid>
</Page>
